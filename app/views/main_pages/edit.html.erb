
<%= render :partial => 'profiles/page_links', :locals => { :profile => @main_page.profile }  %>

<section class="span-18 round-top">
	<h2 class=" banner round-top">Edit Main Page</h2>
	<div class="content round-bottom">
		<p>This will be on the home page of your profile. It's the first thing people will see so you should use this to introduce yourself.</p>
		<%= semantic_form_for @main_page do |form| %>
		  <%= render :partial => 'form', :object => form %>
		  <%= form.submit 'Save' %>
		<% end %>

	</div>
</section>
