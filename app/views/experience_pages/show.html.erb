

<section>
	<% if @experience_page.publish_positions? %>
		<h2>In the Workplace</h2>
		<div style="clear:both"></div>
		<ul class="experience-list">
		<% for position in @experience_page.positions %>
			<li>
				<div class="span-7 position-details">
					<h4><%= position.location %></h4>

					<p class="position-date"><%= position.date_from and position.date_from.strftime("%B %Y") %> - <%= position.date_to and position.date_to.strftime("%B %Y") or 'Present' %></p>
					<p class="position-type"><em><%= position.position_type %></em></p>
				</div>
			  <div class="position-description span-14 last">
					 <p><%= position.description %></p>
			  </div>
			<div style="clear: both;"></div>
			</li>
		<% end %>
		</ul>
	<% end %>

	<% if @experience_page.publish_qualifications? %>
	  <h2>Qualifications</h2>
		<div style="clear:both"></div>
		<ul class="experience-list">
			<% for qualification in @experience_page.qualifications %>
			<li>
			<div class="span-6 position-details">
				<h4><%= qualification.location %></h4>
				<p><%= qualification.date_from and qualification.date_from.strftime("%B %Y") %> - <%= qualification.date_to and qualification.date_to.strftime("%B %Y") or 'Present' %></p>
			</div>
				<table class="span-7 push-2 last">			
				<% for subject in qualification.subjects %>
					<tr>
					<td><%= subject.name %></td>
					<td><%= subject.level %></td>
					<td><%= subject.grade or "-" %></td>
				</tr>
				<% end %>
			</table>
								<div style="clear: both;"></div>
			</li>
			<% end %>
		</ul>
	<% end %>
</section>