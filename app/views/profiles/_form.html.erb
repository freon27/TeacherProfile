<%= form.inputs do %>
<%= form.input :name, :label => 'Profile Name', :hint => 'The name for your profile.  Only you will see this.' %>
<%= form.input :main_subject, :as => :select, :collection => Profile::SUBJECTS, :hint => 'Your primary subject' %>
<%= form.input :url_suffix, :label => 'Profile URL', :required => false, :hint => 'The suffix to the URL you will hand out to prospective employer. e.g. http://teachingprofile.com/profiles/public/yourtexthere'  %>
<%= form.input :photo, :hint => 'An optional photo of you to display on your profile.' %>
<%= image_tag(@profile.photo.url(:medium)) if @profile.photo.url(:medium) != '' %>
<% end %>


