<!DOCTYPE html>
<html>
	<head>
		<title>Teaching Profile</title>
		<%= wicked_pdf_stylesheet_link_tag 'blueprint/screen' -%>
		<%= wicked_pdf_stylesheet_link_tag "cv/cv" -%>
		<!--[if lt IE 8]><%= wicked_pdf_stylesheet_link_tag 'blueprint/ie' %><![endif]-->
		<!--[if lt IE 9]>
		<%= wicked_pdf_javascript_include_tag "http://html5shiv.googlecode.com/svn/trunk/html5.js" %>
		<![endif]-->
		
	
	</head>
	<body class="plain">
		<div class="container">
			<div id="main-body" class="span-32 last">
				<div class="span-6 logo export-logo" id="display-logo">
					<h1><strong><%= "#{ @profile.user.first_name} #{ @profile.user.last_name}" %></strong></h1>
					<% if @profile.main_subject %>
					<h3 id="teaching-subject"><%= @profile.main_subject %> Teacher</h3>
					<% end %>
				</div>
				<div id="central-body" class="span-18 last">
					<section class="push-1 span-16 last">
						<%= yield %>
					</section>
				</div>
			</div>
		</div>
  </body>
</html>