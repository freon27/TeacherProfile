<!DOCTYPE html>
<html>
<head>
	<title>Teaching Profile</title>
  <%= javascript_include_tag :defaults %>
	<%= javascript_include_tag 'showdown.js' %>
	<%= stylesheet_link_tag 'blueprint/screen', :media => 'screen' %>
	<%= stylesheet_link_tag 'blueprint/print',  :media => 'print' %>
	<%= stylesheet_link_tag 'blueprint/plugins/sprites/sprite.css',  :media => 'screen' %>
	<!--[if lt IE 8]><%= stylesheet_link_tag 'blueprint/ie' %><![endif]-->
	<%= stylesheet_link_tag 'teacherprofile', :media => 'screen' %>
	<%= stylesheet_link_tag 'jquery-ui-1.8.11.custom', :media => 'screen' %>
	<%= stylesheet_link_tag 'wmd', :media => 'screen' %>
	
	<!--[if lt IE 9]>
	<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->
	
  <%= csrf_meta_tag %>
</head>
<body>
	
	<div class="topbar">
		<div class="container">
			<nav>
				<h4>Teaching Profile</h4>
				<ul>
					<% if signed_in? %>
					<% if @profile %>
					<li>
						<%= link_to 'View Profile', profile_path(@profile) %>
					</li>
					<% end %>
					<li>
						<%= link_to 'Dashboard', dashboard_user_path(current_user) %>
					</li>
					<li>
						<%= link_to 'Account', edit_user_path(current_user) %>
					</li>
					<li>
						<%= link_to 'Sign out', sign_out_path, :method => :delete %>
					</li>
					<% else %>
					<li>
						<%= link_to 'Sign in', sign_in_path %>
					</li>
					<li>
						<%= link_to 'Register', sign_up_path %>
					</li>
					<% end %>
				</ul>
			</nav>
		</div>
	</div>
		
		<header>
			<div class="masthead">
				<!-- <div class="logo">
						<h1>Teaching Profile</h1>
					</div> -->
			</div>
		</header>
		
		<div class="container">
		<div id="main-body" class="span-24 last">
			<div id="flash">
		    <% flash.each do |key, value| -%>
		      <div id="flash_<%= key %>"><%=h value %></div>
		    <% end %>
		  </div>
		  <% if @side_bar_name %>
			<div class="span-5 sidebar">
				<%= render :partial => @side_bar_name  if @side_bar_name %>
			</div>
			<div id="central-body" class="span-18 last">	
				<section class="push-2 span-16 last">
			<% else %>
			<div id="central-body" class="span-24 last">	
				<section>
			<% end %>
			
					<%= yield %>
				</section>
			</div>
			<div id="footer" class="span-24 last">
				<p>Got a problem?  Email us on freon27@gmail.com for help.</p>
			</div>
		</div>
	</div>
	<%= javascript_include_tag 'wmd.js' %>
</body>
</html>
