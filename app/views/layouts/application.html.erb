<!DOCTYPE html>
<html>
<head>
	<title>Teaching Profile</title>
  <%= javascript_include_tag :defaults %>
	<%= javascript_include_tag 'showdown.js' %>

	<%= stylesheet_link_tag 'blueprint/screen', :media => 'screen' %>
	<%= stylesheet_link_tag 'blueprint/print',  :media => 'print' %>
		<%= stylesheet_link_tag 'blueprint/plugins/sprites/sprite.css',  :media => 'screen' %>
	<!--[if lt IE 8]><%= stylesheet_link_tag 'blueprint/ie' %><![endif]-->
	<%= stylesheet_link_tag 'custom', :media => 'screen' %>
	<%= stylesheet_link_tag 'jquery-ui-1.8.11.custom', :media => 'screen' %>
	<%= stylesheet_link_tag 'wmd', :media => 'screen' %>
	
	<!--[if lt IE 9]>
	<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->
	
  <%= csrf_meta_tag %>
</head>
<body>
  <div class="container">
		<header class="main span-32 last">
			<div  class="logo" id="logo">
				<%= image_tag("logo.png", :alt => "Teacher Profile", :id => 'logo-image', :class => "round") %>
			</div>
			<nav id="navbar">
				<%= render :partial => '/profiles/control_bar', :locals => { :profile => @profile } if @profile && @profile.id %>	
				<ul>
		    <% if signed_in? -%>
		      <li class="impact"><%= link_to "Dashboard", dashboard_user_path(current_user) %></li>
		      <li><%= link_to "Account", edit_user_path(current_user) %></li>
		      <li><%= link_to "Sign out", sign_out_path, :method => :delete %></li>
		    <% else -%>
		     	<li><%= link_to "Sign in", sign_in_path %></li>	
		    <% end -%>
				</ul>
			</nav>
		</header>
		<div id="main-body" class="span-24 last">
			<%= render :partial => @side_bar_name  if @side_bar_name %>
			<div id="central-body" class="span-18 last">
				<div id="flash" class="push-1 span-15">
			    <% flash.each do |key, value| -%>
			      <div id="flash_<%= key %>"><%=h value %></div>
			    <% end %>
			  </div> 	
				<section class="push-2 span-16 last">
					<%= yield %>
				</section>
			</div>
			<div id="footer" class="span-24 last">
				<p>Got a problem?  Email us on freon27@gmail.com for help.</p>
			</div>
		</div>
	</div>
	<%= javascript_include_tag 'wmd.js' %>
</body>
</html>
