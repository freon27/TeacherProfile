<!DOCTYPE html>
<html>
	<head>
		<title>Teaching Profile</title>
	  <%= javascript_include_tag :defaults %>
		<%= stylesheet_link_tag 'blueprint/screen', :media => 'screen' %>
		<%= stylesheet_link_tag 'blueprint/print',  :media => 'print' %>
		<%= stylesheet_link_tag 'blueprint/plugins/sprites/sprite.css',  :media => 'screen' %>
		<!--[if lt IE 8]><%= stylesheet_link_tag 'blueprint/ie' %><![endif]-->
		<%= stylesheet_link_tag 'display', :media => 'screen' %>
		<%= stylesheet_link_tag 'jquery-ui-1.8.11.custom', :media => 'screen' %>
		<!--[if lt IE 9]>
		<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->

	</head>
	<body>
		<div class="container shadow  ">
			<header>
				<div class="span-24 head-info last">
					<div class="prepend-1 span-23 head-overlay last">
						<h1><%= "#{ @profile.user.first_name} #{ @profile.user.last_name}" %></h1>
						<h3>Design and Technology Teacher</h3>
						<h4><%=  @profile.user.email %></h4>
						<nav>
							<ul class="push-8 last plain-list">
								<% if @profile.experience_page.publish_positions? ||  @profile.experience_page.publish_qualifications?  %>
								<li>
									<%= link_to_unless_current('Experience', @profile.experience_page) {|link| content_tag 'span', link, :class => 'selected'} %>
								</li>
								<% end%>
								<% if @profile.philosophy_page.published? %>
								<li>
									<%= link_to_unless_current('Teaching Philosophy', @profile.philosophy_page) {|link| content_tag 'span', link, :class => 'selected'} %>
								</li>
								<% end%>
								<li>
									<%= link_to_unless_current('Introduction', @profile) {|link| content_tag 'span', link, :class => 'selected'} %>
								</li>
							</ul>
							<div style="clear:both"></div>
						</nav>
				</div>
			</header>

			<div style="clear:both"></div>
		<%= yield %>
		</div>
		<div style="clear:both"></div>
  </body>
</html>