
<h2 class=" banner round-top">Sign In</h2>
<div class="content round-bottom">
	<%= form_for :session, :url => session_path do |form| %>
	  <div class="text_field">
	    <%= form.label :email %>
	    <%= form.text_field :email %>
	  </div>
	  <div class="text_field">
	    <%= form.label :password %>
	    <%= form.password_field :password %>
	  </div>
		<nav class="action-bar">
	    <%= form.submit "Sign in", :class => 'btn' %>
			<%= link_to "Forgotten your password?", new_password_path %>
		</nav>
		
	<% end %>
		</div>

