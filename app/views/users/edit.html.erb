
<h2 class=" banner round-top">Editing your account</h2>
<div class="content round-bottom">
	
	<%= semantic_form_for @user do |form| %>
	  <%= render :partial => '/users/form', :locals => { :form => form, :edit_password => false } %>
	  <%= form.submit 'Save', :class => 'btn	' %>
	<% end %>
	<%= button_to 'Delete Account', user_path(@user), :method => :delete, :class => 'btn danger', :confirm => 'Are you sure you want to delete your account?  Warning: You will lose all data and it can not be recovered!' %>
 </div>
