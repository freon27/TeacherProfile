<%= form.inputs do %>
  <%= form.input :first_name %>
  <%= form.input :last_name %>
	<%= form.input :email %>
<% end %>
<% if ['new', 'create'].include? controller.action_name %>
	<%= form.inputs do %>
	  <%= form.input :password %>
	<% end %>
	<%= form.inputs do %>
		<%= form.input :accepted_terms,
			:as => :boolean,
			:label => "I confirm that I have read and accept the terms and conditions",
			:hint => link_to('View Terms & Conditions', '/pages/terms')
		%>
	<% end %>
<% end %>
