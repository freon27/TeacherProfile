<%= form.inputs do %>
  <%= form.input :first_name %>
  <%= form.input :last_name %>
	<%= form.input :email %>
<% end %>
<% if edit_password then %>
<%= form.inputs do %>
  <%= form.input :password %>
  <%= form.input :password_confirmation, :hint => 'Passwords must be between 6 and 15 characters long.  They must contain both upper and lower case characters and at least one numerical character.' %>
<% end %>
<% else %>
<%= form.hidden_field :password %>
<%= form.hidden_field :password_confirmation %>
<% end %>